<div class="container">
  
  <h1 class="h4 my-3"><%= pageTitle %></h1>

  <% if (currentUser !== null) { %>
  <button type="button" class="btn btn-md btn-success" data-toggle="modal" data-target="#exampleModalCenter">
    More about this author
  </button>
  <% } %>

  <% if (posts) {%>
  <div class="row post-grid">
    <% posts.forEach(function(post) { %>
    <div class="col-sm-6 post">
      <div class="post-container">
        <h2 class="display-4 post-title"><%= post.title.toTitleCase() %></h2>
        <div class="short-desc">
          <%= post.body.capitalizeSentence() %>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>
